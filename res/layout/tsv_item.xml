<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3" >

        <TextView
            android:id="@+id/tsv_item_change_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="下单日期:"
            android:textColor="#f2763a"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tsv_order_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="日期"
            android:textColor="#ababab"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tsv_order_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="订单状态"
            android:textColor="#f2763a"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        android:weightSum="1" >

        <TextView
            android:id="@+id/tsv_order_main_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.666666666666"
            android:gravity="center"
            android:text="签证国家:"
            android:textColor="#f2763a"
            android:textSize="18sp" />
        <cn.tripg.xlistview.MarqueeTV
            android:id="@+id/tsv_order_main_change_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.333333333333"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="签证类型"
            android:textColor="#ababab"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        android:weightSum="3" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="订单数量:"
            android:textColor="#eba62f"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tsv_order_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="数量"
            android:textColor="#ababab"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tsv_order_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="金额"
            android:textColor="#f2763a"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        android:weightSum="1" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.666666666666"
            android:gravity="center"
            android:text="订单编号:"
            android:textColor="#eba62f"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tsv_order_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.333333333333"
            android:gravity="left"
            android:text="编号"
            android:textColor="#ababab"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>
