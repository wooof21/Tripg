<?xml version="1.0" encoding="utf-8"?>
<!-- add boardman as TextView -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="18dp"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/receiver_area"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp">
        <TextView
		    android:id="@+id/receiver_text"
		    android:layout_height="wrap_content"
        	android:layout_width="wrap_content"
		    android:textColor="#8A8A8A"
		    android:text="收件人:"
		    android:textSize="18sp"
		    android:layout_marginLeft="24dp"
		    android:layout_gravity="left|center_vertical"
		    android:gravity="center_vertical"/>
		<EditText 
        	android:id="@+id/receiver"
        	android:layout_height="wrap_content"
        	android:layout_width="fill_parent"
        	android:textColor="#8A8A8A"
        	android:background="@null"
        	android:layout_gravity="left|center_vertical"
		    android:gravity="center_vertical"
		    android:layout_toRightOf="@id/receiver_text"
		    android:layout_marginLeft="10dp"
		    android:hint="在这填写收件人"/>
    </RelativeLayout>
	<!-- devider -->
    <ImageView 
    	android:layout_width="fill_parent"
      	android:layout_height="2px"
       	android:scaleType="centerCrop"
       	android:background="?android:attr/listDivider"/>
    <!-- end devider -->
    <RelativeLayout
        android:id="@+id/receiver_address_area"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp">
		<TextView 
		    android:id="@+id/receiver_address_text"
		    android:layout_height="wrap_content"
        	android:layout_width="wrap_content"
		    android:textColor="#8A8A8A"
		    android:text="收件地址:"
		    android:textSize="18sp"
		    android:layout_marginLeft="24dp"
		    android:layout_gravity="left|center_vertical"
		    android:gravity="center_vertical"/>
		<EditText 
        	android:id="@+id/receiver_address"
        	android:layout_height="wrap_content"
        	android:layout_width="fill_parent"
        	android:textColor="#8A8A8A"
        	android:background="@null"
        	android:layout_gravity="left|center_vertical"
		    android:gravity="center_vertical"
        	android:layout_toRightOf="@id/receiver_address_text"
        	android:layout_marginLeft="10dp"
        	android:hint="在这填写收件地址"/>
    </RelativeLayout>
<!-- devider -->
    <ImageView 
    	android:layout_width="fill_parent"
      	android:layout_height="2px"
       	android:scaleType="centerCrop"
       	android:background="?android:attr/listDivider"/>
<!-- end devider -->
    <RelativeLayout 
        android:id="@+id/receiver_post_area"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp">
		<TextView 
		    android:id="@+id/receiver_post_text"
		    android:layout_height="wrap_content"
        	android:layout_width="wrap_content"
		    android:textColor="#8A8A8A"
		    android:text="邮政编码:"
		    android:textSize="18sp"
		    android:layout_marginLeft="24dp"
		    android:layout_gravity="left|center_vertical"
		    android:gravity="center_vertical"/>
		<EditText 
        	android:id="@+id/receiver_post"
        	android:layout_height="wrap_content"
        	android:layout_width="fill_parent"
        	android:textColor="#8A8A8A"
        	android:background="@null"
        	android:layout_gravity="left|center_vertical"
		    android:gravity="center_vertical"
		    android:layout_toRightOf="@id/receiver_post_text"
		    android:layout_marginLeft="10dp"
		    android:inputType="number"
		    android:hint="在这填写邮政编码"/>
    </RelativeLayout>
<!-- devider -->
    <ImageView 
    	android:layout_width="fill_parent"
      	android:layout_height="2px"
       	android:scaleType="centerCrop"
       	android:background="?android:attr/listDivider"/>
<!-- end devider -->
</LinearLayout>