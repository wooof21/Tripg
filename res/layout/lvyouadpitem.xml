<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
<ImageView
        android:id="@+id/lvyouitemimageView1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/demo_02" 
        android:layout_marginLeft="10dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="2dp"/>

    <TextView
        android:id="@+id/lvyouitemtextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_marginLeft="120dp"
        android:layout_marginTop="5dp"
        android:text="圣德泉温泉一日游" 
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/lvyouitemtextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_below="@+id/lvyouitemtextView1"
        android:text="￥99999" 
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/lvyouitemtextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="65dp"
        android:textSize="11sp" />
    
</RelativeLayout>
