<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fly_ticket"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
     <!-- title -->

    <FrameLayout
        android:id="@+id/title_flight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3aace0" >




        <ImageView
            android:id="@+id/title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/ydingdan"
            android:textColor="#ffffff"
            android:textSize="26sp" />
    </FrameLayout>
    <!-- air plane logo -->
    
    
     <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:id="@+id/car_framelayout">

        <net.loonggg.listview.MyListView
            android:id="@+id/lv"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
        
         <ImageView
            android:id="@+id/car_wudindan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/wudingdan" 
            android:visibility="invisible"
/>
    </FrameLayout>
           
    
    
    
</LinearLayout>