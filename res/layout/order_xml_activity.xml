<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- title -->
    <FrameLayout
        android:id="@+id/title_flight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3aace0"
        >

        <ImageView
            android:id="@+id/title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:layout_gravity="left"/>
        <TextView
            android:id="@+id/title_text"
            android:textColor="#ffffff"
            android:textSize="26sp"
            android:text="@string/fly_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />
    </FrameLayout>
    <!-- air plane logo -->
    
    
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="-190dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:src="@drawable/ditu" />
     <TextView
        android:id="@+id/textView1"
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:layout_marginTop="-190dp"
        android:layout_marginLeft="-100dp"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:text="乘车人:"
        android:textSize="15sp"
         />
     <EditText
        android:id="@+id/editTextName"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginTop="-186dp"
        android:layout_marginLeft="12dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:imeOptions="actionDone" 
        android:textSize="15sp"
        android:hint="请输入姓名"
         />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="-147.5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:src="@drawable/ditu" />
    
    <TextView
        android:id="@+id/textView2"
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:layout_marginTop="-146dp"
        android:layout_marginLeft="-100dp"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:text="手机号:"
        android:textSize="15sp"
         />
    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginTop="-146dp"
        android:layout_marginLeft="12dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:imeOptions="actionDone" 
        android:phoneNumber="true"
    	android:maxLength="11"
    	android:numeric="integer"
    	android:textSize="15sp"
        android:hint="请输入手机号"
         />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="-105dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:src="@drawable/ditu" />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="60dp"
        android:layout_height="45.45dp"
        android:layout_marginTop="-104dp"
        android:layout_marginLeft="-100dp"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:text="出发地:"
        android:textSize="15sp"
         />
    <EditText
        android:id="@+id/editTextAddress"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_marginTop="-104dp"
        android:layout_marginLeft="12dp"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:gravity="left"
        android:imeOptions="actionDone" 
        android:singleLine="false"
        android:hint="请输入用车地址"
         />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="-63.3dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:src="@drawable/ditu" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginLeft="-100dp"
        android:layout_marginTop="-62dp"
        android:gravity="center_vertical"
        android:text="人	 数:"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/editTextpersonNum"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginTop="-62dp"
        android:layout_marginLeft="-18dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="15sp"
        android:numeric="integer"
        android:maxLength="1"
        android:imeOptions="actionDone" 
        android:hint="请输入人数"
         />
     <TextView
        android:id="@+id/textViewPer"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:layout_marginTop="-62dp"
        android:layout_marginLeft="80dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="限乘4人"
        android:textSize="15sp"
         />
    
    <ImageView
        android:id="@+id/imageViewDate"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="-20.5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:src="@drawable/ditu" />
    <TextView
        android:id="@+id/textViewData"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_marginTop="-19dp"
        android:layout_gravity="center"
        android:layout_marginLeft="-70dp"
        android:gravity="center_vertical"
        android:text="选择用车日期"
        android:textSize="15sp"
         />
    
    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_marginTop="-19dp"
         android:layout_marginLeft="70dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="选择用车时间"
        android:textSize="15sp"
         />
    

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="22dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:src="@drawable/ditu" />
    <TextView
        android:id="@+id/textViewfap"
        android:layout_width="60dp"
        android:layout_height="45dp"
        android:layout_marginTop="21dp"
        android:layout_marginLeft="-100dp"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:text="发	 票:"
        android:textSize="15sp"
         />
    <ToggleButton
	    android:id="@+id/toggleButton1"
	    android:layout_width="wrap_content"
	    android:layout_height="40dp"
	    android:layout_marginTop="24dp"
        android:layout_marginLeft="-40dp"
        android:layout_gravity="center"
        android:gravity="center"
	    android:text="ToggleButton" />
    <ImageView
	    android:id="@+id/imageView9"
	    android:layout_width="80dp"
	    android:layout_height="45dp"
	    android:layout_marginTop="21dp"
        android:layout_marginLeft="60dp"
        android:layout_gravity="center"
        android:gravity="center"
	    android:src="@drawable/modification" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="64.5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:src="@drawable/ditu" />
	<TextView
        android:id="@+id/textView40807087"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_marginTop="64dp"
        android:layout_marginLeft="-80dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="租车时间/小时:"
        android:textSize="15sp"
         />

	<ImageView
	    android:id="@+id/imageButton1"
	    android:layout_width="30dp"
	    android:layout_height="30dp"
	    android:layout_marginTop="63dp"
        android:layout_marginLeft="-5dp"
        android:layout_gravity="center"
        android:gravity="center"
	    android:src="@drawable/mic" />
	
	<TextView
        android:id="@+id/textViewhour"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginTop="63dp"
        android:layout_marginLeft="30dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="2"
        android:textSize="15sp"
         />

	<ImageView
	    android:id="@+id/imageButton2"
	    android:layout_width="30dp"
	    android:layout_height="30dp"
	    android:layout_marginTop="63dp"
        android:layout_marginLeft="65dp"
        android:layout_gravity="center"
        android:gravity="center"
	    android:src="@drawable/add" />
	
	<ImageView
        android:id="@+id/imageViewfp"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="108dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="gone"
        android:src="@drawable/ditu" />
	<TextView
        android:id="@+id/textViewttou"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="0dp"
        android:layout_gravity="center"
        android:gravity="left"
        android:textSize="15sp"
         />
	
	<TextView
        android:id="@+id/textViewnight"
        android:layout_width="250dp"
        android:layout_height="20dp"
        android:layout_marginTop="161dp"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="23:00-次日6:00夜间服务费(60元/次)"
        android:textSize="15sp"
         />

	<ImageView
	    android:id="@+id/imageView8"
	    android:layout_width="wrap_content"
	    android:layout_height="40dp"
	    android:layout_marginTop="200dp"
	    android:layout_gravity="center"
	    android:gravity="center"
	    android:src="@drawable/tjyd" />

</FrameLayout>

