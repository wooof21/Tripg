<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/lineatlayoutyxiang4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/qz2"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/yxiangimageView1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:src="@drawable/demo_02" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical" >

            
            <TextView
                android:id="@+id/yxiangtextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="意大利探亲访友签证"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/yxiangtextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥9999"
                android:textSize="15sp" />

           

            <TextView
                android:id="@+id/yxiangtextView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="停留时间:以使馆签发为准"
                android:textSize="12sp" />
            
             <ImageView
                android:id="@+id/imageViewliner1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="20dp"
                android:layout_gravity="right|bottom"
                android:src="@drawable/gl2" />

          
        </LinearLayout>
    </LinearLayout>

</LinearLayout>