<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f2f8fb" >
    
    <FrameLayout
        android:id="@+id/title_flight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3aace0" >

        <ImageView
            android:id="@+id/tca_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/tca_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="常用旅客"
            android:textColor="#ffffff"
            android:textSize="26sp" />
    </FrameLayout>
    
    <TextView 
        android:id="@+id/tca_add"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="18sp"
        android:gravity="center"
        android:background="@drawable/add_new_t"
        android:layout_margin="10dp"
        android:textColor="#4ab9c7"
        />

    <ListView
        android:id="@+id/tca_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>
